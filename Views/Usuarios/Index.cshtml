@model IEnumerable<CrudAudiovisuales.models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoCarnet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Nombredeusuario)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Contrasena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoCarnet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoPersona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.Nombredeusuario)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.CorreoElectronico)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.Contrasena)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
